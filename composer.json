{
    "name": "wingly/phone-verification",
    "description": "Phone verification powered by Nexmo",
    "authors": [
        {
            "name": "Dimitris Karapanos",
            "email": "dimitris@wingly.io",
            "homepage": "https://www.wingly.io",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/Wingly-Company/phone-verification",
    "keywords": [
        "Laravel",
        "Nexmo"
    ],
    "require": {
        "php": "^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.10.0",
        "illuminate/console": "^10.48.28|^11.44.4|^12.10.1",
        "illuminate/database": "^10.48.28|^11.44.4|^12.10.1",
        "illuminate/support": "^10.48.28|^11.44.4|^12.10.1",
        "vonage/client": "^4.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4.3",
        "mockery/mockery": "^1.6.12",
        "orchestra/testbench": "^8.35.0|^9.13.0|^10.6.0",
        "friendsofphp/php-cs-fixer": "^3.89.2"
    },
    "autoload": {
        "psr-4": {
            "Wingly\\PhoneVerification\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wingly\\PhoneVerification\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wingly\\PhoneVerification\\PhoneVerificationServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "bump-after-update": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
